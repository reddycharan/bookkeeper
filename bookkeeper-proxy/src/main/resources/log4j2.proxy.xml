<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="${sys:bkproxy.log.level}">
  <Appenders>
    <Console name="CONSOLE" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{yyyyMMddHHmmss.SSSSSS} [%-5p] [%t] [%F:%L] - %m%n"/>
    </Console>
    <RollingFile name="BOOKKEEPER-PROXY" fileName="${sys:bkproxy.log.dir}/${sys:bkproxy.log.file}"
        filePattern="${sys:bkproxy.log.dir}/${sys:bkproxy.log.pattern}"
        immediateFlush="false">
      <PatternLayout pattern="%d{yyyyMMddHHmmss.SSSSSS} [%-5p] [%t] [%F:%L] - %m%n"/>
      <Policies>
      	<!-- Rollover logs every 3 hours -->
      	<TimeBasedTriggeringPolicy interval="3"/>
      </Policies>
      <DefaultRolloverStrategy>
      	<Delete basePath="${sys:bkproxy.log.dir}">
      		<!-- Delete log files older than P[days]D old -->
      		<IfLastModified age="${sys:bkproxy.log.max.fileAge}"/>
      		<IfFileName glob="*.log" />
      		<IfFileName glob="*.out" />
      	</Delete>
      </DefaultRolloverStrategy>
    </RollingFile>
  </Appenders>
  <Loggers>
    <Root level="${sys:bkproxy.log.level}" includeLocation="true">
      <AppenderRef ref="BOOKKEEPER-PROXY"/>
    </Root>
  </Loggers>
</Configuration>

