<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="${sys:bookkeeper.log.level}">
  <Appenders>
    <Console name="CONSOLE" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{yyyyMMddHHmmss.SSSSSS} [%-5p] [%t] [%F:%L] - %m%n"/>
    </Console>
    <RollingFile name="BOOKKEEPER-SERVER" fileName="${sys:bookkeeper.log.dir}/${sys:bookkeeper.log.file}"
    	filePattern="${sys:bookkeeper.log.dir}/${sys:bookkeeper.log.pattern}">
      <PatternLayout pattern="%d{yyyyMMddHHmmss.SSSSSS} [%-5p] [%t] [%F:%L] - %m%n"/>
      <Policies>
      	<TimeBasedTriggeringPolicy/>
      </Policies>
      <DefaultRolloverStrategy>
      	<Delete basePath="${sys:bookkeeper.log.dir}">
      		<!-- Delete log files older than P[days]D old -->
      		<IfLastModified age="${sys:bookkeeper.log.max.fileAge}"/>
      	</Delete>
      </DefaultRolloverStrategy>
    </RollingFile>
  </Appenders>
  <Loggers>
    <Root level="${sys:bookkeeper.log.level}">
      <AppenderRef ref="BOOKKEEPER-SERVER"/>
      <AppenderRef ref="CONSOLE"/>
    </Root>
  </Loggers>
</Configuration>

